<div class="top">
    <h1 id="tagline">How Much Brooklyn Can You Buy/?</h1>
    <!-- form processing is done in the map.js file -->
    <select  id="neighborhood">
      <% Listing.neighborhoods.each do |nabe| %>

                <option value="<%=nabe.neighborhood%>" id="<%=nabe.neighborhood%>"><%=nabe.locality%> - <%=nabe.neighborhood%></option>

      <% end %>
    </select>
    <input type="text" id="amount" value="2000000"/> <input type="button" id="submit" value="go"/>
</div>

